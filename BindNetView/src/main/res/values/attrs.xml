<?xml version="1.0" encoding="utf-8"?>
<resources>



    <declare-styleable name="AbsBindContentView">
        <attr name="loadingClass" format="string"/>
        <attr name="errorViewClass" format="string"/>
        <attr name="emptyImage" format="reference"/>
        <attr name="emptyMessage" format="string"/>
        <attr name="errorImage" format="reference"/>
        <attr name="errorMessage" format="string"/>
        <attr name="showDefaultContentIfEmpty" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BindListContentView">
        <attr name="managerType" format="enum">
            <enum name="list" value="1"/>
            <enum name="grid" value="2"/>
            <enum name="sticky" value="3"/>
        </attr>
        <attr name="staggeredType" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="spanCount" format="integer"/>
        <attr name="staggeredCount" format="integer"/>
    </declare-styleable>

</resources>